<!DOCTYPE html>
<html>
  <head>
    <title>Formula</title>
    <%= stylesheet_link_tag "application" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <nav class="navbar navbar-default" role="navigation">
      <div class="container">
        <%= link_to 'Formula', root_path, class: 'navbar-brand' %>
        <ul class="nav navbar-nav">
          <li><%= link_to 'Contacts', contacts_path %></li>
          <% if authenticated? %>
            <li><%= link_to 'Account', edit_user_path, remote: true %></li>
            <li><%= link_to 'Logout', session_path, method: :delete %></li>
          <% else %>
            <li><%= link_to 'Register', new_user_path, remote: true %></li>
            <li><%= link_to 'Login', new_session_path, remote: true %></li>
          <% end %>
        </ul>
      </div>
    </nav>
    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>
